#:kivy 1.0

<SpecialSlider>
    orientation: 'vertical'

<SliderWithLabel>
    orientation: 'vertical'
    valign: 'top'
    Label:
        text: root.text
        size_hint: 1, .25
    SpecialSlider:
        id: value

<HomeTab@TabbedPanelItem>
    background_normal: 'images/home-inactive.png'
    background_down: 'images/home-active.png'
    border: [1, 1, 1, 1]
    BoxLayout:
        SliderWithLabel:
            id: Main Lights
            remote_name: "Main Lights"
            text: "Lights"

<SettingsTab@TabbedPanelItem>
    background_normal: 'images/settings.png'
    background_down: 'images/settings.png'
    border: [1, 1, 1, 1]

<VanTabbedPanel>:
    tab_height: 64
    tab_width: 64
    do_default_tab: False

    HomeTab:
        id: home_tab

    SettingsTab:
        id: settings
